pragma solidity ^0.8.0;

import "../interface/IERC20.sol";
import "../lib/SafeERC20.sol";
import "../YakAdapter.sol";


interface IQBook {
    function makerMarkets(address make, address take) external view returns (address);

    function takerMarkets(address take, address make) external view returns (address);

    function quote(
        address _from,
        address _to,
        uint256 _amount
    ) external view returns (uint256);

    function swap(
        address _from,
        address _to,
        uint256 _amount
    ) external;
}

interface IMarket {
    function takeVault() external view returns (address);

    function swap(address _receiver) external returns (uint256 makeOut);
}

contract QBookAdapter is YakAdapter {
    using SafeERC20 for IERC20;

    address public immutable qbook;

    constructor(
        string memory _name,
        uint256 _swapGasEstimate,
        address _qbook
    ) YakAdapter(_name, _swapGasEstimate) {
        qbook = _qbook;
    }

    function _query(
        uint256 _amountIn,
        address _tokenIn,
        address _tokenOut
    ) internal view override returns (uint256 amountOut) {
        return IQBook(qbook).quote(_tokenIn, _tokenOut, _amountIn);
    }

    function _swap(
        uint256 _amountIn,
        uint256,
        address _tokenIn,
        address _tokenOut,
        address _to
    ) internal override {
        address market = IQBook(qbook).takerMarkets(_tokenIn, _tokenOut);
        require(market != address(0), "QBookAdapter: Market not found");
        IERC20(_tokenIn).safeTransfer(IMarket(market).takeVault(), _amountIn);
        IMarket(market).swap(_to); // parent fn checks amountOut is sufficient
    }
}
